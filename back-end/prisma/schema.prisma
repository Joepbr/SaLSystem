generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model curso {
  id          Int       @id @default(autoincrement())
  nome        String
  descricao   String?
}

model user {
  id          Int       @id @default(autoincrement())
  fullname    String
  email       String
  password    String
  is_admin    Boolean   @default(false)
}